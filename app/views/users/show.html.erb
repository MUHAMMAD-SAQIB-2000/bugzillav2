<div class="row">
  <div class="col-8">
    <h1><%= @user.name %></h1>
  </div>
  <div class="col-4">
    <div class="mt-3 float-right">
      <% if user_signed_in? %>
        <% if current_user.user_type == 'Manager' %>
          <div class="btn-group">
            <p><%= link_to "Edit User Details", edit_user_path(@user), :class => 'btn btn-dark btn-sm' %></p>
            &nbsp;
            <% if current_user.id != @user.id %>
              <p>
                <%= link_to "Delete User", user_path(@user), :class => 'btn btn-danger btn-sm', method: :delete, data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?" }
                %>
              </p>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <br>
  <div class="col-6 pr-5">
    <h4>User Email:</h4>
    <p><%= @user.email %></p>

    <h4>User Type:</h4>
    <p><%= @user.user_type %></p>
  </div>
  <div class="col-6">
    <div class="float-left">
      <% if user_signed_in? %>
        <%= render 'projects/allprojects', projects: @projects %>
      <% end %>
    </div>
  </div>
</div>
